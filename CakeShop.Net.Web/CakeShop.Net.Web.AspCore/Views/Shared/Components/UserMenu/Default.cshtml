@model IEnumerable<BethanysPieShop.Components.UserMenuItem>

<li class="dropdown">
    <a asp-controller="User"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">User<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var menuItem in Model)
        {
            <li>
                <a asp-controller="User" asp-action=@menuItem.ActionValue
                >@menuItem.DisplayValue</a>
            </li>
        }
    </ul>
</li>