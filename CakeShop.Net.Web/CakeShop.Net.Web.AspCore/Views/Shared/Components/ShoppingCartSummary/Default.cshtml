@model ShoppingCartVM

@if (Model.LstShoppingCartVm.Count>0)
{
    <li>
        <a asp-action="Index" asp-controller="ShoppingCart">
            <span class="glyphicon glyphicon-shopping-cart" ></span>
            <span id="cart-status">
                @Model.LstShoppingCartVm.Count
            </span>
        </a>
    </li>

}